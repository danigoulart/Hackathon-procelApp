<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".adapter.fragment.ConhecaFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/iv_trofeu"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/trofeu"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="19dp"
        android:layout_gravity="center_horizontal"
        android:text="Teste seus conhecimentos!"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/secondary_color"
        android:textAlignment="center"
        android:layout_marginHorizontal="45dp"
        android:layout_gravity="center_horizontal"
        android:text="Responda o máximo de respostas corretas que conseguir. Ao final do teste, você será informado de quantos pontos conseguiu. Boa sorte!"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="240dp"
        android:background="@color/bg_yellow"
        android:textColor="@color/white"
        android:shadowRadius="@integer/material_motion_duration_long_1"
        android:id="@+id/btn_iniciar"
        android:shadowColor="@color/black"
        android:layout_marginTop="38dp"
        android:text="Iniciar"
        android:layout_height="wrap_content"/>

</LinearLayout>